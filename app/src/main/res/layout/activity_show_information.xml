<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/text_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="用户出生日期："
        android:textSize="@dimen/size2" />

    <TextView
        android:id="@+id/show_text_day"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/text_day"
        android:layout_toRightOf="@id/text_day"
        android:text=""
        android:textSize="@dimen/size2" />

    <TextView
        android:id="@+id/text_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_day"
        android:text="用户居住地址："
        android:textSize="@dimen/size2" />

    <TextView
        android:id="@+id/show_text_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/text_address"
        android:layout_toRightOf="@id/text_day"
        android:text=""
        android:textSize="@dimen/size2" />

    <TextView
        android:id="@+id/text_sex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/text_address"
        android:text="性别："
        android:textSize="@dimen/size2" />

    <TextView
        android:id="@+id/show_sex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/text_sex"
        android:layout_toRightOf="@id/text_sex"
        android:text=""
        android:textSize="@dimen/size2" />

    <Button
        android:id="@+id/parameter_second_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/show_sex"
        android:text="返回"
        android:textSize="@dimen/size" />

    <Button
        android:id="@+id/parameter_second_btn_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/parameter_second_btn"
        android:text="返回2"
        android:textSize="@dimen/size" />
</RelativeLayout>
