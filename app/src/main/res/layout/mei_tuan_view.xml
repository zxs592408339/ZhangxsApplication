<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="5dp"
    android:paddingRight="8dp">
    <ImageView
        android:id="@+id/mei_tuan_image_view"
        android:layout_width="115dp"
        android:layout_height="106dp"
        android:scaleType="centerCrop"/>
    <ImageView
        android:id="@+id/mei_tuan_image1_view"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:scaleType="centerCrop"/>
    <TextView
        android:id="@+id/mei_tuan_text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="8dp"
        android:textSize="17dp"
        android:layout_toRightOf="@id/mei_tuan_image_view"
        android:textColor="@android:color/background_dark"/>
    <TextView
        android:id="@+id/mei_tuan_text_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:layout_alignLeft="@+id/mei_tuan_text_title"
        android:layout_below="@+id/mei_tuan_text_title"
        android:layout_toRightOf="@+id/mei_tuan_image_view"
        android:layout_toEndOf="@+id/mei_tuan_image_view" />
    <TextView
        android:id="@+id/mei_tuan_text_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:gravity="bottom"
        android:layout_alignBottom="@+id/mei_tuan_image_view"
        android:layout_alignLeft="@+id/mei_tuan_text_title" />
    <TextView
        android:id="@+id/mei_tuan_text_price1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:textColor="@color/common_mei_tuan_price1"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="4dp"
        android:layout_toRightOf="@id/mei_tuan_text_price"
        android:layout_alignBottom="@id/mei_tuan_text_price"/>
    <TextView
        android:id="@+id/mei_tuan_text_appraise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/mei_tuan_text_price1"/>
</RelativeLayout>
