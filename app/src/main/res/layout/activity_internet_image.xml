<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/internet_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/internet_async_task_brn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="异步任务获取网络图片"/>

    <Button
        android:id="@+id/internet_brn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/internet_async_task_brn"
        android:text="获取图片" />

    <GridView
        android:layout_above="@id/internet_brn"
        android:id="@+id/internet_image_grid_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="1px"
        android:columnWidth="75dp"
        android:horizontalSpacing="1px"
        android:numColumns="3"
        android:verticalSpacing="1px" />
</RelativeLayout>
